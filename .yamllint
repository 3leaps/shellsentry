extends: default
rules:
  document-start: disable
  line-length:
    max: 160
    level: warning
  truthy:
    allowed-values: ["true", "false", "yes", "no"]
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
    indent-sequences: consistent

ignore:
  - node_modules/
  - .git/
  - .plans/
  - bin/
  - dist/
